<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.justin.dao.UserDao">

<!-- 根据传入的Id值，到数据库中查询记录 
<include refid="columns"></include>  可以将下面sql中定义的引入进来。
#{id} el表达式可以将上面的namespace中的model类中的属性引入进来。
-->

	<sql id="columns">id,name,sex,age,addr</sql>


	<select id="selectUser" parameterType="int" resultType="UserBean">
		SELECT
		<include refid="columns"></include>
		FROM user_info WHERE id = #{id}
	</select>

									<!-- 写入新记录并返回主键值，注意，这里的KeyProperty应该是Java类里的属性名称，而非数据表中的字段名 -->
	<insert id="insertUser" parameterType="UserBean">
		INSERT INTO user_info(
		<include refid="columns"></include>
		)
		VALUES(#{userId},#{userName}, #{sex}, #{age}, #{address})
	</insert>

</mapper>